#include <iostream>

int main() {
    int arr[] = {1, 2, 2, 3, 2, 4};
    int size = sizeof(arr) / sizeof(arr[0]);
    int target = 2;
    int count = 0;

    for (int i = 0; i < size; i++) {
        if (arr[i] == target) {
            count++;
        }
    }

    std::cout << "Number of occurrences of " << target << ": " << count << std::endl;

    return 0;
}
